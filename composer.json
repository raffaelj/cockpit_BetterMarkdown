{
    "name": "raffaelj/cockpit-bettermarkdown",
    "type": "cockpit-module",
    "description": "Cache, task lists and ToC support for markdown conversion with Cockpit CMS v1",
    "keywords": ["cockpit", "Markdown", "Parsedown", "Toc"],
    "homepage": "https://github.com/raffaelj/cockpit_BetterMarkdown",
    "license": "MIT",
    "authors": [
        {
            "name": "Raffael Jesche",
            "homepage": "https://www.rlj.me"
        }
    ],
    "require": {
        "composer/installers": "^1.9",
        "erusev/parsedown-extra": "^0.8.1",
        "erusev/parsedown": "^1.7.4",
        "benjaminhoegh/parsedown-toc": "^1.4.3",
        "raffaelj/parsedown-tasks": "^0.1.0"
    },
    "config": {
        "vendor-dir": "lib/vendor",
        "preferred-install": {
            "*": "dist"
        },
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "extra": {
        "installer-name": "BetterMarkdown"
    }
}
